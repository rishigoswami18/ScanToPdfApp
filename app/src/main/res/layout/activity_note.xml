<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <!-- âœ… Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/noteToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D30000"
        app:navigationIcon="@drawable/ic_back"
        app:title="Create Note"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- âœ… Title -->
    <EditText
        android:id="@+id/etNoteTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:hint="Title"
        android:textSize="22sp"

        android:textStyle="bold"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/noteToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- âœ… Content -->
    <EditText
        android:id="@+id/etNoteContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@null"
        android:gravity="top"
        android:hint="Start typing..."
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/etNoteTitle"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- âœ… Bottom Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- âœ… Save Note -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveNote"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Save Note"
                android:textColor="@android:color/white"
                app:cornerRadius="14dp"
                app:backgroundTint="#D30000"
                app:icon="@android:drawable/ic_menu_save"
                app:iconPadding="6dp" />

            <!-- âœ… Share Note -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShareNote"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Share Text"
                android:textColor="#D30000"
                app:cornerRadius="14dp"
                app:strokeColor="#D30000"
                app:strokeWidth="2dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconTint="#D30000"
                app:iconPadding="6dp" />
        </LinearLayout>


        <!-- Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />


        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- âœ… Convert PDF -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConvertPdf"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Convert PDF"
                android:textColor="@android:color/white"
                app:cornerRadius="14dp"
                app:backgroundTint="#333333"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconPadding="6dp" />

            <!-- âœ… Backup Firebase -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackup"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Backup"
                android:textColor="@android:color/white"
                app:cornerRadius="14dp"
                app:backgroundTint="#1976D2"
                app:icon="@android:drawable/ic_menu_share"
                app:iconPadding="6dp" />
            <!-- âœ… View Notes List Button -->


        </LinearLayout>
        <!-- âœ… View Notes List Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewNotes"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“’ View All Notes"
            android:textColor="@android:color/white"
            app:cornerRadius="14dp"
            app:backgroundTint="#009688"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconPadding="8dp"
            android:layout_marginTop="12dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
